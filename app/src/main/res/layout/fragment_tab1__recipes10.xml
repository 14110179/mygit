<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thanh.mytest_phungduythanh.Fragment.Tab1_Recipes10">
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rela7"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/img_hinh3"/>
            <TextView
                android:textStyle="bold|italic"
                android:id="@+id/txt_name1_recipes10"
                android:layout_centerHorizontal="true"
                android:text="Salad"
                android:textSize="24sp"
                android:textColor="#fff"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:gravity="center"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="#fff"
                android:text="Lorem ipsum dolor sit amet, consectetur adipscing elit. Ut pretium pretium tempor. Ut eget imperdiet neque. In"
                android:layout_below="@+id/txt_name1_recipes10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <com.example.thanh.mytest_phungduythanh.ExpandableHeightGridView
            android:layout_below="@id/rela7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:layout_margin="10dp"
            android:id="@+id/grid_recipes10"/>

        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
</FrameLayout>
