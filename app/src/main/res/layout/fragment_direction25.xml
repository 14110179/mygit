<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thanh.mytest_phungduythanh.Fragment.Direction25">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
    android:id="@+id/scrollView"
        android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rela1"
            android:layout_width="match_parent"
            android:layout_height="430dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/hinh3"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
            <TextView
                android:text="RUSSIAN SALAD"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/While"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:background="#fff"
                android:orientation="vertical"
                android:layout_marginTop="105dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INGREDIENTS"/>
                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/img_green"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="40dp"
                        android:text="Letuce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="200g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/img_green"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="40dp"
                        android:text="Mix Salads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="150g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/img_orange"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="40dp"
                        android:text="Bacon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="6 pieces"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/img_orange"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="40dp"
                        android:text="Chicken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="4 pieces"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/img_purple"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="40dp"
                        android:text="Species"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="..."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/img_yellow"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="40dp"
                        android:text="Cheese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="100g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear1"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_marginTop="20dp"
            android:layout_below="@id/rela1"
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <TextView
                android:textColor="#000"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NUTRITION"/>
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/img_test_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_title2_direction25"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:text="RECIPE"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.example.thanh.mytest_phungduythanh.ExpandableHeightListView
            android:id="@+id/list_direction25"
            android:layout_below="@id/txt_title2_direction25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </RelativeLayout>
</com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

</FrameLayout>
